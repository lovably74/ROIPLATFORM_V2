# ====================================================
# ROIPLATFORM V2 - 환경 변수 설정 파일
# Ocean Blue & Neumorphism 디자인 시스템
# Multi-tenant SaaS Platform
# ====================================================

# -------------------- 애플리케이션 설정 --------------------
VITE_APP_NAME=ROIPLATFORM
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=통합 ROI 관리 플랫폼

# -------------------- 환경 설정 --------------------
NODE_ENV=development
SPRING_PROFILES_ACTIVE=dev

# -------------------- 프론트엔드 설정 --------------------
# Vue 3 개발 서버
VITE_PORT=3000
VITE_HOST=0.0.0.0

# API 백엔드 URL
VITE_API_BASE_URL=http://localhost:8080
VITE_WS_BASE_URL=ws://localhost:8080

# PWA 설정
VITE_PWA_ENABLED=true

# 디자인 시스템
VITE_THEME=ocean-blue
VITE_UI_STYLE=neumorphism

# -------------------- 백엔드 설정 --------------------
# Spring Boot 서버 포트
SERVER_PORT=8080
GATEWAY_PORT=8080

# 서비스별 포트
AUTH_SERVICE_PORT=8081
TENANT_SERVICE_PORT=8082
PMIS_SERVICE_PORT=8083
EPMS_SERVICE_PORT=8084
ERP_SERVICE_PORT=8085

# -------------------- 데이터베이스 설정 --------------------
# PostgreSQL 15+
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=roiplatform_db
DATABASE_USERNAME=roiplatform
DATABASE_PASSWORD=roiplatform123!

# Connection Pool 설정
DATABASE_POOL_MIN_SIZE=5
DATABASE_POOL_MAX_SIZE=20
DATABASE_POOL_MAX_IDLE_TIME=300000

# JPA/Hibernate 설정
JPA_SHOW_SQL=true
JPA_HIBERNATE_DDL_AUTO=validate
JPA_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# -------------------- Redis 설정 --------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0
REDIS_TIMEOUT=5000

# Session 설정
SESSION_TIMEOUT=30m
SESSION_STORE_TYPE=redis

# -------------------- 메시지 큐 설정 --------------------
# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=roiplatform
RABBITMQ_PASSWORD=roiplatform123!
RABBITMQ_VIRTUAL_HOST=/

# -------------------- JWT 설정 --------------------
JWT_SECRET=roiplatform-jwt-secret-key-ocean-blue-theme-2024
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000
JWT_ISSUER=roiplatform

# -------------------- 보안 설정 --------------------
# CORS 설정
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=3600

# CSRF 설정
CSRF_ENABLED=false

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# -------------------- 다국어 설정 --------------------
# 기본 언어
DEFAULT_LOCALE=ko
SUPPORTED_LOCALES=ko,en,ja,zh

# 다국어 리소스
I18N_CACHE_ENABLED=true
I18N_CACHE_TTL=3600

# -------------------- 파일 업로드 설정 --------------------
# 파일 저장 경로
FILE_UPLOAD_PATH=./uploads
FILE_UPLOAD_MAX_SIZE=100MB
FILE_UPLOAD_MAX_REQUEST_SIZE=500MB

# 허용된 파일 확장자
ALLOWED_FILE_EXTENSIONS=jpg,jpeg,png,gif,svg,pdf,doc,docx,xls,xlsx,ppt,pptx,txt,zip

# -------------------- 이메일 설정 --------------------
# SMTP 설정
MAIL_HOST=localhost
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_PROTOCOL=smtp
MAIL_TLS_ENABLED=true
MAIL_AUTH_ENABLED=true

# 발송자 정보
MAIL_FROM_ADDRESS=noreply@roiplatform.com
MAIL_FROM_NAME=ROIPLATFORM

# -------------------- 로깅 설정 --------------------
# 로깅 레벨
LOG_LEVEL=INFO
LOG_LEVEL_SQL=DEBUG
LOG_LEVEL_SECURITY=DEBUG

# 로그 파일 설정
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# -------------------- 모니터링 설정 --------------------
# Actuator 설정
MANAGEMENT_ENDPOINTS_ENABLED=true
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE=health,info,metrics,prometheus

# 헬스 체크
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DATASOURCE_ENABLED=true
HEALTH_CHECK_REDIS_ENABLED=true

# -------------------- 캐시 설정 --------------------
# 캐시 TTL (초)
CACHE_TTL_USER_SESSION=1800
CACHE_TTL_PROJECT_CONFIG=3600
CACHE_TTL_I18N_MESSAGES=7200

# -------------------- API 문서화 --------------------
# OpenAPI/Swagger 설정
API_DOCS_ENABLED=true
API_DOCS_TITLE=ROIPLATFORM API
API_DOCS_VERSION=v1.0
API_DOCS_DESCRIPTION=ROIPLATFORM Multi-tenant SaaS API Documentation

# -------------------- 외부 서비스 연동 --------------------
# OAuth 설정 (Google)
OAUTH_GOOGLE_CLIENT_ID=
OAUTH_GOOGLE_CLIENT_SECRET=
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8080/oauth2/callback/google

# OAuth 설정 (Kakao)
OAUTH_KAKAO_CLIENT_ID=
OAUTH_KAKAO_CLIENT_SECRET=
OAUTH_KAKAO_REDIRECT_URI=http://localhost:8080/oauth2/callback/kakao

# OAuth 설정 (Naver)
OAUTH_NAVER_CLIENT_ID=
OAUTH_NAVER_CLIENT_SECRET=
OAUTH_NAVER_REDIRECT_URI=http://localhost:8080/oauth2/callback/naver

# -------------------- 개발 도구 설정 --------------------
# DevTools 설정
DEVTOOLS_RESTART_ENABLED=true
DEVTOOLS_LIVERELOAD_ENABLED=true

# 개발 모드 설정
DEV_MODE_ENABLED=true
DEV_MOCK_DATA_ENABLED=true
DEV_BYPASS_AUTH=false

# -------------------- 테스트 설정 --------------------
# 테스트 데이터베이스
TEST_DATABASE_URL=jdbc:h2:mem:testdb
TEST_DATABASE_DRIVER=org.h2.Driver
TEST_DATABASE_USERNAME=sa
TEST_DATABASE_PASSWORD=

# -------------------- 프로젝트별 도메인 설정 --------------------
# 기본 도메인
DEFAULT_DOMAIN=service.smartpmis.net
PUBLIC_PROJECT_CODE=public

# 예약된 프로젝트 코드
RESERVED_PROJECT_CODES=public,admin,api,www,mail,ftp,cdn,static,assets

# -------------------- 멀티테넌트 설정 --------------------
# 테넌트 컨텍스트
TENANT_HEADER_NAME=X-Tenant-Id
PROJECT_HEADER_NAME=X-Project-Code

# 테넌트 격리
ROW_LEVEL_SECURITY_ENABLED=true
TENANT_ISOLATION_STRICT=true

# -------------------- 성능 최적화 --------------------
# 데이터베이스 최적화
QUERY_TIMEOUT=30000
CONNECTION_TIMEOUT=5000
IDLE_TIMEOUT=600000

# 캐시 최적화
CACHE_COMPRESSION_ENABLED=true
CACHE_STATISTICS_ENABLED=true

# -------------------- 보안 강화 --------------------
# 패스워드 정책
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBER=true
PASSWORD_REQUIRE_UPPERCASE=true

# 계정 잠금
ACCOUNT_LOCK_ENABLED=true
ACCOUNT_LOCK_MAX_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=300

# -------------------- Feature Flags --------------------
# 기능 플래그
FEATURE_DASHBOARD_ENABLED=true
FEATURE_ADVANCED_SEARCH=true
FEATURE_BULK_OPERATIONS=true
FEATURE_EXPORT_IMPORT=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=false

# -------------------- Analytics & Monitoring --------------------
# 애널리틱스
ANALYTICS_ENABLED=false
ANALYTICS_GOOGLE_ID=
ANALYTICS_MIXPANEL_TOKEN=

# APM (Application Performance Monitoring)
APM_ENABLED=false
APM_SERVICE_NAME=roiplatform
APM_ENVIRONMENT=development

# -------------------- 백업 설정 --------------------
# 자동 백업
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# ====================================================
# 환경별 설정 파일:
# - .env (공통)
# - .env.local (로컬 개발환경 - Git에 포함되지 않음)
# - .env.development (개발 환경)
# - .env.staging (스테이징 환경) 
# - .env.production (운영 환경)
# ====================================================