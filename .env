# CISP 프로젝트 환경설정 파일
# 생성일: 2025-10-01

# 애플리케이션 기본 설정
APP_NAME=CISP
APP_ENV=development
APP_PORT=3000
APP_DEBUG=true

# 데이터베이스 설정 (PostgreSQL)
DB_TYPE=postgresql
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cisp_dev
DB_USERNAME=cisp_user
DB_PASSWORD=cisp_password123!

# 테스트 데이터베이스 설정
TEST_DB_NAME=cisp_test
TEST_DB_USERNAME=cisp_user
TEST_DB_PASSWORD=cisp_password123!

# Redis 설정
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# 세션 설정
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_MAX_AGE=86400000

# 파일 업로드 설정
UPLOAD_MAX_SIZE=10485760
UPLOAD_PATH=./uploads

# 이메일 설정 (개발용 - 실제 서비스시 변경 필요)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@cisp.com

# 로그 설정
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# CORS 설정
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:8080

# 다국어 설정
DEFAULT_LANGUAGE=ko
SUPPORTED_LANGUAGES=ko,en

# 보안 설정
BCRYPT_ROUNDS=12
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# 테넌트 설정
DEFAULT_TENANT_ID=default
MULTI_TENANT_ENABLED=true

# 개발 도구 설정
SWAGGER_ENABLED=true
GRAPHQL_PLAYGROUND_ENABLED=true