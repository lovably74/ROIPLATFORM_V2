{
  "name": "@cisp/gateway-service",
  "version": "1.0.0",
  "description": "CISP API Gateway Service - 마이크로서비스 라우팅 및 인증 게이트웨이",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t cisp-gateway .",
    "docker:run": "docker run -p 3000:3000 cisp-gateway"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.7.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.0",
    "express-session": "^1.17.3",
    "redis": "^4.6.0",
    "connect-redis": "^7.1.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "axios": "^1.4.0",
    "lodash": "^4.17.21",
    "@cisp/common-libs": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/express-session": "^1.17.7",
    "@types/compression": "^1.7.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/uuid": "^9.0.2",
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.5.0",
    "typescript": "^5.1.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "supertest": "^6.3.0",
    "@types/supertest": "^2.0.12",
    "eslint": "^8.45.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "gateway",
    "microservice",
    "proxy",
    "authentication",
    "routing",
    "cisp"
  ],
  "author": "CISP Development Team",
  "license": "MIT"
}