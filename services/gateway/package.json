{
  "name": "@cisp/gateway-service",
  "version": "1.0.0",
  "description": "CISP API Gateway Service - 마이크로서비스 라우팅 및 인증 게이트웨이",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf dist",
    "lint": "eslint 'src/**/*.{js,ts}' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t cisp-gateway .",
    "docker:run": "docker run -p 3000:3000 cisp-gateway"
  },
  "dependencies": {
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^7.4.1",
    "http-proxy-middleware": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "express-session": "^1.18.1",
    "redis": "^4.7.0",
    "connect-redis": "^8.0.0",
    "compression": "^1.7.4",
    "express-validator": "^7.2.0",
    "uuid": "^10.0.0",
    "joi": "^17.13.3",
    "axios": "^1.7.9",
    "lodash": "^4.17.21",
    "@cisp/common-libs": "file:../../shared/common-libs"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/express-session": "^1.18.0",
    "@types/compression": "^1.7.5",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/uuid": "^10.0.0",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/jest": "^29.5.14",
    "typescript": "^5.7.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.17.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "rimraf": "^6.0.1"
  },
  "keywords": [
    "gateway",
    "microservice",
    "proxy",
    "authentication",
    "routing",
    "cisp"
  ],
  "author": "CISP Development Team",
  "license": "MIT"
}